<thlogic>
    <attr sel="#headId" th:replace="~{fragments/head :: headFragment}" />
    <attr sel="#game-title" th:text="#{game.title}" />
    <attr sel="#enter-guess" th:text="#{game.enter.guess}" />
    <attr sel="#submit" th:value="#{game.submit}" />

    <attr sel="#main-message"
          th:text="${__${T(com.mariobanay.util.AttributeNames).MAIN_MESSAGE}__}"/>
    <attr sel="#result-message"
          th:text="${__${T(com.mariobanay.util.AttributeNames).RESULT_MESSAGE}__}"/>
    <attr sel="#game-form"
          th:action="${__${T(com.mariobanay.util.GameMappings).PLAY}__}"/>
    <attr sel="#footerId"
          th:replace="~{fragments/footer :: footer}" />

</thlogic>